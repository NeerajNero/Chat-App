generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// These Enums define a set of allowed values for a field
enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum UserStatus {
  ONLINE
  OFFLINE
}

// ✅ NEW: We'll use this to know if a message is text, an image, etc.
enum MessageType {
  TEXT
  IMAGE
  FILE
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String?
  userName  String    @unique
  firstName String
  lastName  String?
  bio       String?
  gender    Gender?
  profileImage String?
  status       UserStatus @default(OFFLINE)
  createdAt    DateTime @default(now())

  // Relations
  messages      Message[]
  conversations Conversation[] @relation("ConversationUsers")
}

model Conversation {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // ✅ NEW: Added fields for group chat functionality
  name      String?   // Name of the group chat (null for 1-on-1)
  isGroup   Boolean   @default(false) // Flag to distinguish

  // Relations
  messages  Message[]
  users     User[]    @relation("ConversationUsers")
}

model Message {
  id        String       @id @default(cuid())
  
  // ✅ UPDATED: Renamed 'body' to 'content' to support more than text
  content   String       // Will store text, or a URL for images/files
  // ✅ NEW: Added a type for the message
  type      MessageType  @default(TEXT)

  createdAt DateTime     @default(now())
  
  // Relations
  sender    User         @relation(fields: [senderId], references: [id])
  senderId  String
  
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
}